# Environment Configuration for MEGA
# Copy this file to .env and fill in your values
# NEVER commit .env to git!

# ===================================
# API Keys (Required for AI features)
# ===================================

# OpenAI API Key
# Get yours at: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-key-here

# Google Gemini API Key  
# Get yours at: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=your-key-here

# ===================================
# Application Configuration
# ===================================

# Adaptive Engine Backend: json or sqlite
MEGA_ADAPTIVE_BACKEND=json

# Path to adaptive engine data
MEGA_ADAPTIVE_PATH=.adaptive/data.json

# Logging Level: DEBUG, INFO, WARNING, ERROR, CRITICAL
MEGA_LOG_LEVEL=INFO

# ===================================
# Security Settings
# ===================================

# Enable rate limiting (recommended for production)
MEGA_ENABLE_RATE_LIMIT=true

# Maximum requests per minute
MEGA_MAX_REQUESTS_PER_MINUTE=60

# ===================================
# Development Settings
# ===================================

# Enable debug mode (never use in production!)
DEBUG=false

# Database URL (if using SQLite backend)
DATABASE_URL=sqlite:///./mega.db

# ===================================
# Testing Settings
# ===================================

# Test database (used by tests only)
TEST_DATABASE_URL=sqlite:///./test_mega.db

# ===================================
# Optional Services
# ===================================

# Codecov token (for coverage uploads)
# CODECOV_TOKEN=your-token-here

# GitHub token (for automated operations)
# GITHUB_TOKEN=your-token-here
